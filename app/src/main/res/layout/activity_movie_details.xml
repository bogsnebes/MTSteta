<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivStatemback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/statemBack"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stathemback"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="224dp">

        <ImageView
            android:id="@+id/ivRectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/rectangleMarginStart"
            android:layout_marginTop="@dimen/rectangleMarginTop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_rectangle_12"
            tools:ignore="VectorDrawableCompat"
             />

        <ImageView
            android:id="@+id/ivEllipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ellipseMarginTop"
            android:layout_marginEnd="@dimen/ellipseMarginEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_ellipse_44"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dateMarginStart"
            android:layout_marginTop="@dimen/dateMarginTop"
            android:gravity="top"
            android:text="@string/Date"
            android:textColor="@color/black"
            android:textSize="@dimen/date"
            app:layout_constraintStart_toEndOf="@+id/ivRectangle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/nameMarginStart"
            android:layout_marginTop="@dimen/nameMarginTop"
            android:text="@string/Name"
            android:textColor="@color/black"
            android:textSize="@dimen/Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivRectangle" />

        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/starMarginStart"
            android:layout_marginTop="@dimen/starMarginTop"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:srcCompat="@drawable/ic__star"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/ivStar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/beetwen_stars"
            android:layout_marginTop="@dimen/starMarginTop"
            app:layout_constraintStart_toEndOf="@+id/ivStar"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:srcCompat="@drawable/ic__star"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/ivStar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/beetwen_stars"
            android:layout_marginTop="@dimen/starMarginTop"
            app:layout_constraintStart_toEndOf="@+id/ivStar1"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:srcCompat="@drawable/ic__star"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/ivStar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/beetwen_stars"
            android:layout_marginTop="@dimen/starMarginTop"
            app:layout_constraintStart_toEndOf="@+id/ivStar2"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:srcCompat="@drawable/ic__star"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/ivStar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/beetwen_stars"
            android:layout_marginTop="@dimen/starMarginTop"
            app:layout_constraintStart_toEndOf="@+id/ivStar3"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:srcCompat="@drawable/ic__color__1_"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/descriptionMarginStart"
            android:layout_marginTop="@dimen/descriptionMarginTop"
            android:layout_marginEnd="@dimen/descriptionMarginEnd"
            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="@dimen/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivStar4" />

        <TextView
            android:id="@+id/tvActors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/actorsMarginStart"
            android:layout_marginTop="@dimen/actorsMarginTop"
            android:text="@string/actors"
            android:textColor="@color/black"
            android:textSize="@dimen/actors"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/typeMarginStart"
            android:layout_marginTop="@dimen/typeMarginTop"
            android:layout_marginEnd="@dimen/typeMarginEnd"
            android:layout_marginBottom="@dimen/typeMarginBottom"
            android:lineSpacingExtra="0dp"
            android:text="@string/type"
            android:textSize="@dimen/type"
            app:layout_constraintBottom_toBottomOf="@+id/ivRectangle"
            app:layout_constraintEnd_toEndOf="@+id/ivRectangle"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/ivRectangle"
            app:layout_constraintTop_toTopOf="@+id/ivRectangle"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="SmallSp" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="0dp"
            android:layout_height="@dimen/horrizontalScrollViewHeight"
            android:layout_marginStart="@dimen/horizontalScrollViewMarginStart"
            android:layout_marginTop="@dimen/horizontalScrollViewMarginTop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvActors">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvActor_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/actor_name_2MarginTop"
                    android:text="@string/actor_name_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/actor_name_2"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/ivHarnnet"
                    app:layout_constraintTop_toBottomOf="@+id/ivHarnnet" />

                <ImageView
                    android:id="@+id/ivMakkelani"
                    android:layout_width="@dimen/actorWidth"
                    android:layout_height="@dimen/actorHeight"
                    android:layout_marginStart="@dimen/makkelaniMarginStart"
                    app:layout_constraintStart_toEndOf="@+id/ivStatem"
                    app:srcCompat="@drawable/makkelani"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:id="@+id/tvActor_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/actor_name_1MarginTop"
                    android:text="@string/actor_name_1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/actor_name_1"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/ivStatem"
                    app:layout_constraintTop_toBottomOf="@+id/ivStatem" />

                <TextView
                    android:id="@+id/tvActor_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/actor_name_3MarginTop"
                    android:text="@string/actor_name_3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/actor_name_3"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/ivMakkelani"
                    app:layout_constraintTop_toBottomOf="@+id/ivMakkelani" />

                <ImageView
                    android:id="@+id/ivStatem"
                    android:layout_width="@dimen/actorWidth"
                    android:layout_height="@dimen/actorHeight"
                    app:srcCompat="@drawable/statem"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

                <ImageView
                    android:id="@+id/ivHarnnet"
                    android:layout_width="@dimen/actorWidth"
                    android:layout_height="@dimen/actorHeight"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/ivMakkelani"
                    app:srcCompat="@drawable/harrnet"
                    tools:layout_editor_absoluteY="0dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age"
            android:textColor="@color/black"
            android:textSize="@dimen/age"
            app:layout_constraintBottom_toBottomOf="@+id/ivEllipse"
            app:layout_constraintEnd_toEndOf="@+id/ivEllipse"
            app:layout_constraintStart_toStartOf="@+id/ivEllipse"
            app:layout_constraintTop_toTopOf="@+id/ivEllipse" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/linearLayout"
            android:layout_marginTop="46dp"
            android:background="@color/white"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

            <ImageView
                android:id="@+id/ivReturnhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_home"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/ivReturnprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_chel"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>