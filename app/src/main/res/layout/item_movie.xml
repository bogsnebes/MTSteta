<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="55dp"
    android:background="@drawable/image_bg">

    <ImageView
        android:id="@+id/ivMovie"
        android:layout_width="@dimen/iv_movie_width"
        android:layout_height="@dimen/iv_movie_height"
        android:contentDescription="@string/image_of_the_film"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recyclemovie" />

    <TextView
        android:id="@+id/tvMovie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tv_movie_margin_start"
        android:layout_marginTop="@dimen/tv_movie_margin_top"
        android:text="Гнев человеческий"
        android:textColor="@color/black"
        android:textSize="@dimen/movie_title"
        app:layout_constraintEnd_toEndOf="@+id/ivMovie"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMovie" />

    <TextView
        android:id="@+id/tvMovie_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/movie_description_margin_top"
        android:text="Эйч — загадочный и холодный на вид джентльмен, но внутри него пылает жажда справедливости. Преследуя..."
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/ivMovie"
        app:layout_constraintStart_toStartOf="@+id/tvMovie_title"
        app:layout_constraintTop_toBottomOf="@+id/tvMovie_title" />

    <ImageView
        android:id="@+id/star_1"
        android:layout_width="@dimen/iv_star_width"
        android:layout_height="@dimen/iv_star_height"
        android:layout_marginTop="@dimen/iv_star_margin_top"
        app:layout_constraintStart_toStartOf="@+id/tvMovie_description"
        app:layout_constraintTop_toBottomOf="@+id/tvMovie_description"
        app:srcCompat="@drawable/ic_fill_star"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/ivStar_2"
        android:layout_width="@dimen/iv_star_width"
        android:layout_height="@dimen/iv_star_height"
        android:layout_marginStart="@dimen/beetwen_stars"
        android:layout_marginTop="@dimen/iv_star_margin_top"
        app:layout_constraintStart_toEndOf="@+id/star_1"
        app:layout_constraintTop_toBottomOf="@+id/tvMovie_description"
        app:srcCompat="@drawable/ic_fill_star"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/ivStar_3"
        android:layout_width="@dimen/iv_star_width"
        android:layout_height="@dimen/iv_star_height"
        android:layout_marginStart="@dimen/beetwen_stars"
        android:layout_marginTop="@dimen/iv_star_margin_top"
        app:layout_constraintStart_toEndOf="@+id/ivStar_2"
        app:layout_constraintTop_toBottomOf="@+id/tvMovie_description"
        app:srcCompat="@drawable/ic_fill_star"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/ivStar_4"
        android:layout_width="@dimen/iv_star_width"
        android:layout_height="@dimen/iv_star_height"
        android:layout_marginStart="@dimen/beetwen_stars"
        android:layout_marginTop="@dimen/iv_star_margin_top"
        app:layout_constraintStart_toEndOf="@+id/ivStar_3"
        app:layout_constraintTop_toBottomOf="@+id/tvMovie_description"
        app:srcCompat="@drawable/ic_empty_star"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/ivStar_5"
        android:layout_width="@dimen/iv_star_width"
        android:layout_height="@dimen/iv_star_height"
        android:layout_marginStart="@dimen/beetwen_stars"
        android:layout_marginTop="@dimen/iv_star_margin_top"
        app:layout_constraintStart_toEndOf="@+id/ivStar_4"
        app:layout_constraintTop_toBottomOf="@+id/tvMovie_description"
        app:srcCompat="@drawable/ic_empty_star"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/ivRectangle"
        android:layout_width="@dimen/rectangle_width"
        android:layout_height="@dimen/rectangle_height"
        app:layout_constraintBottom_toBottomOf="@+id/ivStar_5"
        app:layout_constraintEnd_toEndOf="@+id/ivMovie"
        app:layout_constraintTop_toTopOf="@+id/ivStar_5"
        app:srcCompat="@drawable/ic_ellipse"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18+"
        android:textColor="@color/black"
        android:textSize="@dimen/movie_age"
        app:layout_constraintBottom_toBottomOf="@+id/ivRectangle"
        app:layout_constraintEnd_toEndOf="@+id/ivRectangle"
        app:layout_constraintStart_toStartOf="@+id/ivRectangle"
        app:layout_constraintTop_toTopOf="@+id/ivRectangle" />
</androidx.constraintlayout.widget.ConstraintLayout>