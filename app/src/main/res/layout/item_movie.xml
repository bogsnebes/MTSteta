<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="55dp">

    <ImageView
        android:id="@+id/movie_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_of_the_film"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recycle" />

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:text="Гнев человеческий"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/movie_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_image" />

    <TextView
        android:id="@+id/movie_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Эйч — загадочный  и холодный на вид джентльмен, но внутри него пылает жажда справедливости. Преследуя..."
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/movie_image"
        app:layout_constraintStart_toStartOf="@+id/movie_title"
        app:layout_constraintTop_toBottomOf="@+id/movie_title" />

    <ImageView
        android:id="@+id/star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/movie_description"
        app:layout_constraintTop_toBottomOf="@+id/movie_description"
        app:srcCompat="@drawable/ic__star"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/star_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/star_1"
        app:layout_constraintTop_toBottomOf="@+id/movie_description"
        app:srcCompat="@drawable/ic__star"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/star_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/star_2"
        app:layout_constraintTop_toBottomOf="@+id/movie_description"
        app:srcCompat="@drawable/ic__star"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/star_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/star_3"
        app:layout_constraintTop_toBottomOf="@+id/movie_description"
        app:srcCompat="@drawable/ic__color__1_"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/star_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/star_4"
        app:layout_constraintTop_toBottomOf="@+id/movie_description"
        app:srcCompat="@drawable/ic__color__1_"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/rectangle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/star_5"
        app:layout_constraintEnd_toEndOf="@+id/movie_image"
        app:layout_constraintTop_toTopOf="@+id/star_5"
        app:srcCompat="@drawable/ic_ellipse_44"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/movie_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18+"
        android:textColor="#000000"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle"
        app:layout_constraintEnd_toEndOf="@+id/rectangle"
        app:layout_constraintStart_toStartOf="@+id/rectangle"
        app:layout_constraintTop_toTopOf="@+id/rectangle" />
</androidx.constraintlayout.widget.ConstraintLayout>